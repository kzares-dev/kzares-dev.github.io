---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
import { getBlogPosts } from "../store/blog";
import { ArrowRight, BookOpen, Search, Zap, Layers, Code, Lightbulb, Compass, Sparkles, TrendingUp, Rocket, Target, Flame } from "@lucide/astro";
import { Image } from "astro:assets";
import Footer from "../components/Footer.astro";
import CollectionSection from "../components/CollectionSection.astro";

const { featuredPost, otherPosts } = await getBlogPosts();
---

<Layout >
	<Header />
	<main class="flex flex-col gap-0 pb-20 space-y-10">
		<!-- Hero Section - Full Width -->
		<section class="px-4 py-8 md:py-12 relative overflow-hidden">
			<div class="absolute inset-0 overflow-hidden">
				<div class="absolute top-10 right-20 w-72 h-72 bg-[rgb(245,175,175)]/20 rounded-full blur-3xl" />
				<div class="absolute bottom-10 left-20 w-72 h-72 bg-[rgb(220,100,100)]/10 rounded-full blur-3xl" />
			</div>
			<div class="mx-auto text-center space-y-8 relative z-10">
				<div class="space-y-6">
					<div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white border border-[rgb(245,175,175)] shadow-sm hover:shadow-md transition-all">
						<Sparkles size={16} class="text-[rgb(220,100,100)]" />
						<span class="text-sm font-semibold text-[rgb(220,100,100)]">Welcome to KZARES</span>
					</div>
					<h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-bold leading-tight px-4">
						<span class="text-stone-800">Master</span>
						<br />
						<span class="bg-gradient-to-r from-[rgb(245,175,175)] via-[rgb(220,100,100)] to-[rgb(200,70,70)] bg-clip-text text-transparent">
							Software Development
						</span>
						<br />
						<span class="text-stone-700">Through Curated Knowledge</span>
					</h1>
					<p class="text-lg md:text-xl text-stone-600 max-w-3xl mx-auto leading-relaxed px-4">
						Explore comprehensive guides, best practices, and modern development techniques. Learn from real-world examples and expert insights organized in curated collections.
					</p>
				</div>
				<div class="flex flex-col sm:flex-row gap-4 justify-center px-4">
					<a
						href="/blog"
						class="px-8 py-4 bg-gradient-to-r from-[rgb(220,100,100)] to-[rgb(200,70,70)] text-white rounded-lg hover:shadow-xl transition-all font-semibold inline-flex items-center justify-center gap-2 group hover:scale-105"
					>
						<BookOpen size={20} class="group-hover:rotate-12 transition-transform" />
						Explore Articles
					</a>
					<a
						href="/collections"
						class="px-8 py-4 bg-white border-2 border-[rgb(220,100,100)] text-[rgb(220,100,100)] rounded-lg hover:bg-[rgb(251,239,239)] hover:shadow-xl transition-all font-semibold inline-flex items-center justify-center gap-2 group hover:scale-105"
					>
						<Layers size={20} class="group-hover:rotate-12 transition-transform" />
						Browse Collections
					</a>
				</div>
			</div>
		</section>

		<!-- Stats Section -->
		<section class="px-4 py-12 md:py-16  bg-primary">
			<div class="flex justify-center gap-8 md:gap-20 flex-wrap">
				<div class="text-center group">
					<div class="text-4xl md:text-5xl font-bold text-amber-800 bg-clip-text mb-2 group-hover:scale-110 transition-transform">15+</div>
					<p class="text-stone-600 font-semibold">Articles</p>
				</div>
				<div class="text-center group">
					<div class="text-4xl md:text-5xl font-bold text-amber-800 bg-clip-text mb-2 group-hover:scale-110 transition-transform">4</div>
					<p class="text-stone-600 font-semibold">Collections</p>
				</div>
				<div class="text-center group">
					<div class="text-4xl md:text-5xl font-bold text-amber-800 bg-clip-text mb-2 group-hover:scale-110 transition-transform">100%</div>
					<p class="text-stone-600 font-semibold">Free Access</p>
				</div>
			</div>
		</section>

		<!-- Features Section - Enhanced -->
		<section class="px-4 py-20 md:py-32 ">
			<div class="mb-20 text-center">
				<h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-stone-800 mb-4">What You'll Find Here</h2>
				<p class="text-lg md:text-xl text-stone-600 max-w-2xl mx-auto">Comprehensive resources to accelerate your development journey</p>
			</div>
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
				<!-- Card 1 -->
				<div class="group relative bg-card p-10 shadow-sm transition-all hover:border-[rgb(220,100,100)] hover:-translate-y-2">
					<div class="absolute inset-0 bg-gradient-to-br from-transparent to-[rgb(245,175,175)]/10 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity" />
					<div class="relative z-10">
						<div class="w-16 h-16 bg-gradient-to-br from-[rgb(245,175,175)] to-[rgb(220,100,100)] rounded-2xl flex items-center justify-center mb-6 group-hover:scale-125 transition-transform group-hover:rotate-12">
							<Code size={32} class="text-white" />
						</div>
						<h3 class="text-2xl md:text-3xl font-bold mb-3 text-stone-800">Technical Guides</h3>
						<p class="text-stone-600 leading-relaxed mb-6">In-depth tutorials covering frontend frameworks, backend architecture, DevOps practices, and everything in between.</p>
						<div class="flex items-center gap-2 text-[rgb(220,100,100)] font-bold opacity-0 group-hover:opacity-100 translate-y-2 group-hover:translate-y-0 transition-all">
							Start Learning <ArrowRight size={20} />
						</div>
					</div>
				</div>

				<!-- Card 2 -->
				<div class="group relative bg-card p-10 shadow-sm transition-all hover:border-[rgb(220,100,100)] hover:-translate-y-2">
					<div class="absolute inset-0 bg-gradient-to-br from-transparent to-[rgb(245,175,175)]/10 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity" />
					<div class="relative z-10">
						<div class="w-16 h-16 bg-gradient-to-br from-[rgb(245,175,175)] to-[rgb(220,100,100)] rounded-2xl flex items-center justify-center mb-6 group-hover:scale-125 transition-transform group-hover:rotate-12">
							<Lightbulb size={32} class="text-white" />
						</div>
						<h3 class="text-2xl md:text-3xl font-bold mb-3 text-stone-800">Best Practices</h3>
						<p class="text-stone-600 leading-relaxed mb-6">Industry standards and proven approaches for writing clean, maintainable code and building scalable applications.</p>
						<div class="flex items-center gap-2 text-[rgb(220,100,100)] font-bold opacity-0 group-hover:opacity-100 translate-y-2 group-hover:translate-y-0 transition-all">
							Discover <ArrowRight size={20} />
						</div>
					</div>
				</div>

				<!-- Card 3 -->
				<div class="group relative bg-card p-10 shadow-sm transition-all hover:border-[rgb(220,100,100)] hover:-translate-y-2">
					<div class="absolute inset-0 bg-gradient-to-br from-transparent to-[rgb(245,175,175)]/10 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity" />
					<div class="relative z-10">
						<div class="w-16 h-16 bg-gradient-to-br from-[rgb(245,175,175)] to-[rgb(220,100,100)] rounded-2xl flex items-center justify-center mb-6 group-hover:scale-125 transition-transform group-hover:rotate-12">
							<Zap size={32} class="text-white" />
						</div>
						<h3 class="text-2xl md:text-3xl font-bold mb-3 text-stone-800">Quick Reference</h3>
						<p class="text-stone-600 leading-relaxed mb-6">Easily searchable articles organized by topic. Find exactly what you need when you need it with smart categorization.</p>
						<div class="flex items-center gap-2 text-[rgb(220,100,100)] font-bold opacity-0 group-hover:opacity-100 translate-y-2 group-hover:translate-y-0 transition-all">
							Explore <ArrowRight size={20} />
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Collections & Actions Section -->
		<section class="px-4">
			<div class="mb-16 flex items-center justify-center flex-col text-center">
				<h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-stone-800 mb-4">Navigate</h2>
				<p class="text-lg text-stone-600">Organized collections to streamline your learning</p>
			</div>

			<div class="grid grid-cols-1 lg:grid-cols-3 gap-6 md:gap-8">
				<!-- Main Collections Card -->
				<a
					href="/collections"
					class="group relative bg-gradient-to-br from-white to-[rgb(251,239,239)] overflow-hidden shadow-lg hover:shadow-2xl transition-all p-10 md:p-12 flex flex-col justify-between rounded-2xl lg:col-span-1 border-2 border-transparent hover:border-[rgb(220,100,100)] hover:-translate-y-2"
				>
					<div class="absolute top-0 right-0 w-48 h-48 bg-gradient-to-br from-[rgb(245,175,175)] to-transparent rounded-full -mr-24 -mt-24 opacity-20 group-hover:scale-125 group-hover:opacity-30 transition-all duration-300" />
					<div class="relative z-10">
						<div class="w-20 h-20 bg-gradient-to-br from-[rgb(245,175,175)] to-[rgb(220,100,100)] rounded-2xl flex items-center justify-center mb-8 group-hover:scale-110 transition-transform">
							<Layers size={40} class="text-white" />
						</div>
						<h3 class="text-3xl md:text-4xl font-bold text-stone-800 mb-3">All Collections</h3>
						<p class="text-stone-600 text-lg">JavaScript, Backend, DevOps, Web Development and more</p>
					</div>
					<div class="relative z-10 flex items-center gap-3 text-[rgb(220,100,100)] font-bold group-hover:translate-x-2 transition-transform mt-8">
						Browse All <ArrowRight size={24} />
					</div>
				</a>

				<!-- Action Cards -->
				<div class="lg:col-span-2 grid grid-cols-1 sm:grid-cols-2 gap-8">
					<!-- Latest Articles Card -->
					<a
						href="/blog"
						class="group relative bg-gradient-to-br from-[rgb(220,100,100)] via-[rgb(210,80,80)] to-[rgb(200,70,70)] text-white overflow-hidden shadow-lg hover:shadow-2xl transition-all p-10 md:p-12 flex flex-col justify-between rounded-2xl hover:-translate-y-2"
					>
						<div class="absolute top-0 right-0 w-48 h-48 bg-white/10 rounded-full -mr-24 -mt-24 group-hover:scale-125 transition-transform" />
						<div class="relative z-10">
							<div class="w-20 h-20 bg-white/20 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
								<Flame size={40} />
							</div>
							<h3 class="text-3xl md:text-4xl font-bold mb-2">Latest Articles</h3>
							<p class="text-white/90 text-lg">Fresh content and recent updates</p>
						</div>
						<div class="relative z-10 flex items-center gap-2 font-bold group-hover:translate-x-2 transition-transform mt-8">
							Read Now <ArrowRight size={24} />
						</div>
					</a>

					<!-- Smart Search Card -->
					<a
						href="/search"
						class="group relative bg-gradient-to-br from-[rgb(245,175,175)] via-[rgb(230,120,120)] to-[rgb(220,100,100)] text-white overflow-hidden shadow-lg hover:shadow-2xl transition-all p-10 md:p-12 flex flex-col justify-between rounded-2xl hover:-translate-y-2"
					>
						<div class="absolute top-0 right-0 w-48 h-48 bg-white/10 rounded-full -mr-24 -mt-24 group-hover:scale-125 transition-transform" />
						<div class="relative z-10">
							<div class="w-20 h-20 bg-white/20 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
								<Search size={40} />
							</div>
							<h3 class="text-3xl md:text-4xl font-bold mb-2">Smart Search</h3>
							<p class="text-white/90 text-lg">Find exactly what you need instantly</p>
						</div>
						<div class="relative z-10 flex items-center gap-2 font-bold group-hover:translate-x-2 transition-transform mt-8">
							Search Now <ArrowRight size={24} />
						</div>
					</a>
				</div>
			</div>
		</section>

		<!-- Latest Articles Section - Full Width -->
		<section class="px-4 py-10">
			<div class="mb-16 text-center">
				<h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-stone-800 mb-4">Latest Articles</h2>
				<p class="text-lg md:text-xl text-stone-600 max-w-2xl mx-auto">Recent posts to expand your knowledge</p>
			</div>
			<div>
				<CollectionSection
					cols={"md:grid-cols-2 lg:grid-cols-3"}
					posts={otherPosts.splice(0, 3)}
				/>
			</div>
			<div class="text-center mt-16">
				<a
					href="/blog"
					class="inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-[rgb(220,100,100)] to-[rgb(200,70,70)] text-white rounded-lg hover:shadow-xl transition-all font-bold group hover:scale-105"
				>
					View All Articles <ArrowRight size={20} class="group-hover:translate-x-1 transition-transform" />
				</a>
			</div>
		</section>

		<!-- CTA Section - Full Width -->
		<section class="px-4 py-24 md:py-40 bg-gradient-to-r from-[rgb(220,100,100)] via-[rgb(210,80,80)] to-[rgb(200,70,70)] text-white relative overflow-hidden">
			<div class="absolute inset-0 overflow-hidden">
				<div class="absolute top-0 left-10 w-96 h-96 bg-white/10 rounded-full -ml-48 -mt-48" />
				<div class="absolute bottom-0 right-10 w-96 h-96 bg-white/10 rounded-full -mr-48 -mb-48" />
				<div class="absolute top-1/2 left-1/4 w-64 h-64 bg-white/5 rounded-full" />
			</div>
			
			<div class="relative z-10 text-center space-y-8 max-w-5xl mx-auto">
				<div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/20 border border-white/40">
					<Rocket size={18} />
					<span class="text-sm font-semibold">Transform Your Skills</span>
				</div>
				<h2 class="text-4xl md:text-5xl lg:text-7xl font-bold leading-tight">
					Ready to Level Up Your Development Game?
				</h2>
				<p class="text-xl md:text-2xl text-white/90 leading-relaxed max-w-3xl mx-auto">
					Join hundreds of developers who have transformed their careers with our comprehensive guides, tutorials, and best practices.
				</p>
				<div class="flex flex-col sm:flex-row gap-4 justify-center pt-4">
					<a
						href="/blog"
						class="px-8 py-4 bg-white text-[rgb(220,100,100)] rounded-lg hover:bg-gray-50 transition-all font-bold inline-flex items-center justify-center gap-2 group hover:scale-105 shadow-lg hover:shadow-xl"
					>
						<BookOpen size={20} class="group-hover:rotate-12 transition-transform" />
						Start Reading
					</a>
					<a
						href="/search"
						class="px-8 py-4 bg-white/20 border-2 border-white text-white rounded-lg hover:bg-white/30 transition-all font-bold inline-flex items-center justify-center gap-2 group hover:scale-105"
					>
						<Search size={20} class="group-hover:rotate-12 transition-transform" />
						Explore Topics
					</a>
				</div>
			</div>
		</section>
	</main>

	<Footer />
</Layout>
