---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
import { AlertCircle, Home, Search } from "@lucide/astro";
---

<Layout>
	<Header />
	<main class="px-4 py-5">
		<div class="max-w-2xl mx-auto">
			<div class="text-center mb-12">
				<div
					class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-[rgb(251,239,239)] mb-6"
				>
					<AlertCircle size={40} class="text-[rgb(220,100,100)]" />
				</div>
				<h1 class="text-6xl font-bold mb-4 leading-tight">
					404
				</h1>
				<h2 class="text-3xl font-bold mb-4 text-stone-800">
					Page Not Found
				</h2>
				<p class="text-gray-600 text-lg mb-8">
					Sorry, the page you're looking for doesn't exist or has been moved.
				</p>

				<div class="flex flex-col sm:flex-row gap-4 justify-center">
					<a
						href="/"
						class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-[rgb(220,100,100)] text-white rounded-lg hover:bg-[rgb(200,70,70)] transition-colors font-semibold"
					>
						<Home size={20} />
						Back to Home
					</a>
					<a
						href="/search"
						class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-card border border-[rgb(220,100,100)] text-stone-800 rounded-lg hover:border-[rgb(200,70,70)] hover:bg-primary/10 transition-colors font-semibold"
					>
						<Search size={20} />
						Search
					</a>
				</div>
			</div>

			<div class="grid grid-cols-1 sm:grid-cols-3 gap-6 mt-16">
				<a
					href="/blog"
					class="group bg-card p-6 rounded-lg shadow-sm hover:shadow-md transition-all border border-transparent hover:border-[rgb(220,100,100)]"
				>
					<h3 class="font-bold text-lg mb-2 group-hover:text-[rgb(220,100,100)] transition-colors">
						Blog
					</h3>
					<p class="text-gray-600 text-sm">
						Explore our latest articles and posts
					</p>
				</a>

				<a
					href="/collections"
					class="group bg-card p-6 rounded-lg shadow-sm hover:shadow-md transition-all border border-transparent hover:border-[rgb(220,100,100)]"
				>
					<h3 class="font-bold text-lg mb-2 group-hover:text-[rgb(220,100,100)] transition-colors">
						Collections
					</h3>
					<p class="text-gray-600 text-sm">
						Browse content by category
					</p>
				</a>

				<a
					href="/about"
					class="group bg-card p-6 rounded-lg shadow-sm hover:shadow-md transition-all border border-transparent hover:border-[rgb(220,100,100)]"
				>
					<h3 class="font-bold text-lg mb-2 group-hover:text-[rgb(220,100,100)] transition-colors">
						About
					</h3>
					<p class="text-gray-600 text-sm">
						Learn more about us
					</p>
				</a>
			</div>
		</div>
	</main>
	<Footer />
</Layout>
